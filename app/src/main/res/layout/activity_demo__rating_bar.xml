<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#58faea"
    tools:context="com.example.hp.firstapp.Demo_RatingBar">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Know your Ratings!!"
        android:textStyle="italic"
        android:textColor="#121313"
        android:textSize="20sp"
        android:background="#13ef34"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/e1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating 1 : "

            android:textSize="20dp"
            android:textColor="#f72d29"
            android:textStyle="bold"
            />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="0.5"
            android:id="@+id/r1"/>

    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating 2:"
        android:textSize="20dp"
        android:textColor="#2088f1"
        android:textStyle="bold"
        />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="0.5"
        tools:layout_editor_absoluteY="59dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/r2"/>

</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Final Bar :"
        android:textSize="25dp"
        android:textColor="#fafd14"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="10"
            android:stepSize="0.5"
            android:rating="0.5"
            tools:layout_editor_absoluteY="59dp"
            tools:layout_editor_absoluteX="8dp"
            android:isIndicator="true"
            android:id="@+id/r3"/>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textColor="#123"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:id="@+id/b1"

/>


</LinearLayout>

    <!--style="?android:attr/ratingBarStyleSmall"-->